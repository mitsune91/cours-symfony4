{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table striped">
        <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Pseudo</th>
            <th>Adresse</th>
            <th>CodePostal</th>
            <th>Ville</th>
            <th>Pays</th>
            <th>Telephone</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.codePostal }}</td>
                <td>{{ user.ville }}</td>
                <td>{{ user.pays }}</td>
                <td>{{ user.telephone }}</td>
                <td>
                    <a class="waves-effect waves-light btn-small" href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a class="waves-effect waves-light btn-small" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="waves-effect waves-light btn-small" href="{{ path('user_new') }}">Create new</a>
{% endblock %}

